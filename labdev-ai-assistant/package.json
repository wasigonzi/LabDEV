{
  "name": "labdev-ai-assistant",
  "displayName": "LabDev AI Assistant",
  "description": "Chat con IA usando modelos gratuitos de HuggingFace",
  "version": "1.0.0",
  "publisher": "labdev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "labdev-ai-container",
          "title": "LabDev AI Assistant",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "labdev-ai-container": [
        {
          "id": "labdev-ai-chat",
          "name": "Chat con IA",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "labdev-ai.openChat",
        "title": "ðŸ’œ LabDev AI",
        "icon": {
          "light": "icon-light.svg",
          "dark": "icon-dark.svg"
        }
      },
      {
        "command": "labdev-ai.askQuestion",
        "title": "LabDev: Preguntar a la IA"
      },
      {
        "command": "labdev-ai.explainCode",
        "title": "LabDev: Explicar cÃ³digo seleccionado"
      },
      {
        "command": "labdev-ai.fixCode",
        "title": "LabDev: Corregir cÃ³digo"
      }
    ],

    "menus": {
      "commandPalette": [
        {
          "command": "labdev-ai.openChat"
        }
      ],
      "editor/title": [
        {
          "command": "labdev-ai.openChat",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "editor/title/run": [
        {
          "command": "labdev-ai.openChat",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "labdev-ai.openChat",
          "group": "navigation",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "command": "labdev-ai.explainCode",
          "when": "editorHasSelection",
          "group": "labdev-ai"
        },
        {
          "command": "labdev-ai.fixCode",
          "when": "editorHasSelection",
          "group": "labdev-ai"
        }
      ]
    },
    "keybindings": [
      {
        "command": "labdev-ai.openChat",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "configuration": {
      "title": "LabDev AI Assistant",
      "properties": {
        "labdev-ai.model": {
          "type": "string",
          "default": "mistralai/Mistral-7B-Instruct-v0.2",
          "description": "Modelo de HuggingFace a usar"
        },
        "labdev-ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key de HuggingFace (gratis en huggingface.co)"
        }
      }
    }
  },
  "dependencies": {
    "@huggingface/inference": "^2.8.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
