{
  "name": "labdev-ai-complete",
  "displayName": "LabDev AI Complete",
  "description": "Asistente AI estilo Codex con modos Agent, referencias @archivo y preview de ediciones",
  "version": "2.0.0",
  "publisher": "labdev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "labdev-ai-complete",
          "title": "LabDev AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "labdev-ai-complete": [
        {
          "id": "labdev-ai-chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "labdev-ai.openChat",
        "title": "LabDev AI: Open Chat",
        "icon": "$(sparkle)"
      },
      {
        "command": "labdev-ai.readFile",
        "title": "LabDev AI: Read File"
      },
      {
        "command": "labdev-ai.writeFile",
        "title": "LabDev AI: Write File"
      },
      {
        "command": "labdev-ai.executeCommand",
        "title": "LabDev AI: Execute Command"
      },
      {
        "command": "labdev-ai.explainCode",
        "title": "LabDev AI: Explain Selected Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "labdev-ai.explainCode",
          "when": "editorHasSelection",
          "group": "labdev-ai"
        }
      ]
    },
    "keybindings": [
      {
        "command": "labdev-ai.openChat",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "configuration": {
      "title": "LabDev AI Complete",
      "properties": {
        "labdev-ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "HuggingFace API Key"
        },
        "labdev-ai.model": {
          "type": "string",
          "default": "mistralai/Mistral-7B-Instruct-v0.2",
          "description": "HuggingFace model to use"
        },
        "labdev-ai.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum tokens for AI responses"
        }
      }
    }
  },
  "dependencies": {
    "@huggingface/inference": "^2.8.1"
  },
  "scripts": {
    "test": "echo \"No tests\" && exit 0"
  },
  "type": "commonjs"
}
